{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": {
			"type": "swc",
			"options": {
				"swcrcPath": ".swcrc"
			}
		},
		"typeCheck": true,
		"tsConfigPath": "tsconfig.json",
		"assets": [{ "include": "i18n/**/*", "watchAssets": true }]
	}
}
