{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "@nestjs/swc",
    "swcOptions": {
      "jsc": {
        "parser": {
          "syntax": "typescript",
          "decorators": true
        },
        "target": "es2021",
        "transform": {
          "legacyDecorator": true,
          "decoratorMetadata": true
        }
      },
      "module": {
        "type": "commonjs"
      }
    }
  }
}
